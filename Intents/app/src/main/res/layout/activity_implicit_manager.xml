<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Implicit Intents"
            android:paddingVertical="25dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numOrUrlInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:textSize="20sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:textSize="20sp"
            android:paddingVertical="8dp"
            android:onClick="onNumberCall" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHONE DIAL"
            android:textSize="20sp"
            android:paddingVertical="8dp"
            android:onClick="onPhoneDial" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPEN WEBSITE"
            android:textSize="20sp"
            android:paddingVertical="8dp"
            android:onClick="onWebsiteOpen" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPLICATION MANAGER"
            android:textSize="20sp"
            android:paddingVertical="8dp"
            android:onClick="onAppManage" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WIFI MANAGER"
            android:textSize="20sp"
            android:paddingVertical="8dp"
            android:onClick="onWifiManage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>